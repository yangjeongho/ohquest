/*customize*/

.ui-tabs { position: relative; padding:0; zoom: 1; } 
.ui-tabs .ui-tabs-nav { margin: 0; padding:0;}

.ui-tabs .ui-tabs-nav li{float:left;margin-right:0px;background:url(../images/btn/tab_bg_l.gif) no-repeat;}
.ui-tabs .ui-tabs-nav li span{display:block;margin-left:2px;}
.ui-tabs .ui-tabs-nav li span a{color:#333;line-height:14px;text-decoration:none;display:block;padding:6px 19px 5px; background:url(../images/btn/tab_bg_r.gif) no-repeat 100% 0;}
.ui-tabs .ui-tabs-nav li a:hover{color:#333;}

.ui-tabs .ui-tabs-nav li.ui-tabs-selected {float:left;margin-right:0px;background:url(../images/btn/tab_bg_l_on.gif) no-repeat;}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected span{display:block;margin-left:2px; margin-right:2px;}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected span a{color:#345196; line-height:14px; text-decoration:none; display:block; padding:6px 19px 5px; font-weight:bold; background:url(../images/btn/tab_bg_r_on.gif) no-repeat 100% 0;}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected a:hover{color:#345196;}
.ui-tabs .ui-tabs-panel { display: block; border:1px solid #ccc; background:#FFF;color:#333;clear:both; padding:5px; border-top:none;}
.ui-tabs .ui-tabs-hide { display: none !important; }

.container{
  width:320px;
  height:568px;
}

.passes{
  width:100%;
  list-style:none;
  padding:0;
  margin:0;
  display:inline-block;
  position:relative;
}

.passes li{
  position:absolute;
  display:inline-block;
  width:100%;
  height:300px;
  border-radius:10px;
  -webkit-box-shadow: 0px -15px 20px 0px rgba(0,0,0,0.27);
  -moz-box-shadow: 0px -15px 20px 0px rgba(0,0,0,0.27);
  box-shadow: 0px -15px 20px 0px rgba(0,0,0,0.27);
  margin:0;
  padding:0;
  overflow:hidden;
  
  -webkit-transition: all .4s ease-out;
}

.passes li.current{
  -webkit-transform:translate3d(0,0,0) !important;
}

.passes li:before, .passes li:after{
  content:'';
  position:absolute;
  width:10px;
  height:10px;
  background:rgb(255,255,255);
  border-radius:50%;
  top:30px;
  left:-5px;
}

.passes li:after{
  left:auto;
  right:-5px;
}

